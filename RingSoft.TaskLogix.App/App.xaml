<Application x:Class="RingSoft.TaskLogix.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RingSoft.TaskLogix.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/RingSoft.CustomTemplate.Controls.WPF;component/Resources/TemplateResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Image x:Key="GreenAlertImage" Source="Resources/Task.ico"/>
            <Image x:Key="YellowAlertImage" Source="Resources/YellowAlert.ico"/>
            <BitmapImage x:Key="DatabaseImage" UriSource="/Resources/database-50.png" />
            <BitmapImage x:Key="TaskImage" UriSource="/Resources/task-100.png" />
            <BitmapImage x:Key="MarkCompleteImage" UriSource="/Resources/complete-50.png" />
            <BitmapImage x:Key="RecurImage" UriSource="/Resources/recycle-arrows-triangle-64.png" />

        </ResourceDictionary>

    </Application.Resources>
</Application>
