<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>Resources\Task.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\complete-50.png" />
    <None Remove="Resources\database-50.png" />
    <None Remove="Resources\recycle-arrows-triangle-64.png" />
    <None Remove="Resources\task-100.png" />
    <None Remove="Resources\Task.ico" />
    <None Remove="Resources\YellowAlert.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\complete-50.png" />
    <Resource Include="Resources\database-50.png" />
    <Resource Include="Resources\recycle-arrows-triangle-64.png" />
    <Resource Include="Resources\task-100.png" />
    <Resource Include="Resources\Task.ico" />
    <Resource Include="Resources\YellowAlert.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="9.0.5">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="RingSoft.CustomTemplate.Controls.WPF" Version="2.0.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RingSoft.TaskLogix.Library\RingSoft.TaskLogix.Library.csproj" />
  </ItemGroup>

</Project>
