<local:TaskRecurUserControlBase x:Class="RingSoft.TaskLogix.App.TaskMaintenance.TaskRecurWeeklyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dec="clr-namespace:RingSoft.DataEntryControls.WPF;assembly=RingSoft.DataEntryControls.WPF"
             xmlns:da="clr-namespace:RingSoft.TaskLogix.DataAccess.Model;assembly=RingSoft.TaskLogix.DataAccess"
             xmlns:vm="clr-namespace:RingSoft.TaskLogix.Library.ViewModels;assembly=RingSoft.TaskLogix.Library"
             xmlns:local="clr-namespace:RingSoft.TaskLogix.App.TaskMaintenance"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:TaskRecurWeeklyViewModel x:Name="LocalViewModel"/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="5, 0, 0, 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                <local:RecurControlRadioButton x:Name="EveryXWeeksRadio" Content="Every" VerticalAlignment="Center" IsChecked="{Binding Path=RecurType, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static da:WeeklyRecurTypes.EveryXWeeks}, Mode=TwoWay}" NextDownRadioButton="{Binding ElementName=RegenRadio}" TabRightControl="{Binding ElementName=RecurWeeksControl}"/>

                <dec:IntegerEditControl x:Name="RecurWeeksControl" Width="20" HorizontalAlignment="Left" Value="{Binding RecurWeeks, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" UiCommand="{Binding RecurWeeksUiCommand}"/>

                <Label HorizontalAlignment="Left" Content="week(s) on"/>
            </StackPanel>

            <Grid Grid.Row="1" Grid.Column="0" Margin="20,5,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>

                </Grid.ColumnDefinitions>

                <CheckBox x:Name="SunCheck" Grid.Row="0" Grid.Column="0" Content="Sunday" IsChecked="{Binding Sun}"/>

                <CheckBox x:Name="MonCheck" Grid.Row="0" Grid.Column="1" Content="Monday" IsChecked="{Binding Mon}"/>

                <CheckBox x:Name="TueCheck" Grid.Row="0" Grid.Column="2" Content="Tuesday" IsChecked="{Binding Tue}"/>

                <CheckBox x:Name="WedCheck" Grid.Row="0" Grid.Column="3" Content="Wednesday" IsChecked="{Binding Wed}"/>

                <CheckBox x:Name="ThuCheck" Grid.Row="1" Grid.Column="0" Content="Thursday" IsChecked="{Binding Thu}"/>

                <CheckBox x:Name="FriCheck" Grid.Row="1" Grid.Column="1" Content="Friday" IsChecked="{Binding Fri}"/>

                <CheckBox x:Name="SatCheck" Grid.Row="1" Grid.Column="2" Content="Saturday" IsChecked="{Binding Sat}"/>

            </Grid>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5, 5, 0, 0">

            <local:RecurControlRadioButton x:Name="RegenRadio" Content="Regenerate new task" VerticalAlignment="Center" IsChecked="{Binding Path=RecurType, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static da:WeeklyRecurTypes.RegenerateXWeeksAfterCompleted}, Mode=TwoWay}" NextDownRadioButton="{Binding ElementName=EveryXWeeksRadio}" TabRightControl="{Binding ElementName=RegenControl}"/>

            <dec:IntegerEditControl x:Name="RegenControl" Width="20" HorizontalAlignment="Left" Value="{Binding RegenWeeksAfterCompleted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" UiCommand="{Binding RegenWeeksUiCommand}"/>

            <Label HorizontalAlignment="Left" Content="week(s) after each task is completed" VerticalAlignment="Center"/>

        </StackPanel>

    </Grid>
</local:TaskRecurUserControlBase>
